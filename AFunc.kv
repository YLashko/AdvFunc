#:kivy 2.0.0

<MainScreen>:

    multisamples: 0

    FloatLayout:
        size: root.width, root.height

        TextInput:
            id: function
            font_size: 30
            hint_text: 'function'
            size_hint: 0.98, 0.08
            pos_hint: {'x': 0.01, 'y': 0.11}

        Button:
            id: toggle_mode
            text: 'Toggle draw'
            font_size: 30
            pos_hint: {'x': 0.01, 'y': 0.01}
            size_hint: 0.31, 0.08
            on_press: root.toggle_draw_mode()
        
        TextInput:
            input_filter: 'float'
            id: starting_value
            font_size: 30
            hint_text: 'Starting value'
            pos_hint: {'x': 0.34, 'y': 0.01}
            size_hint: 0.15, 0.08
        
        TextInput:
            input_filter: 'int'
            id: vertical_scale
            text: '500'
            font_size: 30
            hint_text: 'Vertical scale'
            pos_hint: {'x': 0.50, 'y': 0.01}
            size_hint: 0.15, 0.08

        Button:
            id: clear
            text: 'Clear'
            font_size: 30
            pos_hint: {'x': 0.67, 'y': 0.01}
            size_hint: 0.31, 0.08
            on_press: root.clear()
        